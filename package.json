    "url": "https://github.com/opcions/opcions.github.io/issues"
  },
  "homepage": "https://github.com/opcions/opcions.github.io#readme",
  "devDependencies": {
    "live-reload": "^1.1.0",
    "node-sass": "^3.4.1",
    "parallelshell": "^2.0.0",
    "watch": "^0.16.0",
    "zurb-foundation-5": "^5.4.7"
  }
}
